// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Organization {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Center {
  id             String        @id @default(cuid())
  name           String
  address        String?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  passwordHash String?
  role      Role
  sessions Session[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  SUPER_ADMIN
  CENTER_ADMIN
  TEACHER
  PARENT
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  user      User     @relation(references: [id], fields: [userId], onDelete: Cascade)
}
